@model GymExam.Models.Coach

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Coach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           <div class="form-group">
         @Html.RadioButton("Gender", "Мужчина")
            <span>Мужчина</span> <br />
         @Html.RadioButton("Gender", "Женщина")
            <span>Женщина</span> <br />
             </div>
            <div class="form-group">
                <label asp-for="TrainingExperience" class="control-label"></label>
                <input asp-for="TrainingExperience" class="form-control" />
                <span asp-validation-for="TrainingExperience" class="text-danger"></span>
            </div>
            <div class="form-group">  
                <label asp-for = "Status">CoachStatus</label>
               @Html.DropDownListFor(model => model.Status, Enum.GetValues(typeof(CoachStatus)).Cast<CoachStatus>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }), new { @class = "form-control", id = "CoachStatus" })
             </div>
            <div class="form-group">  
                <label asp-for = "Specialization">CoachStatus</label>
               @Html.DropDownListFor(model => model.Specialization, Enum.GetValues(typeof(Specialization)).Cast<Specialization>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }), new { @class = "form-control", id = "Specialization" })
             </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
