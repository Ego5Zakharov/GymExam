@model IEnumerable<GymExam.Models.Workout>

@{
    ViewData["Title"] = "Index";
}

<h1>Тренировочный процесс</h1>
<h2>Для записи на любую из нижеперечисленных тренировок обращаться по номеру телефона любого из действующих тренеров</h2>
@if (User.IsInRole("admin") || (User.IsInRole("moderator") ||(User.IsInRole("coach")))) // если у пользователя есть роль модератора или администратора,тренера - показать ссылку
                        {
                         <p>
    <a asp-action="Create">Create New</a>
</p>
                        }


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startTrainingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeWorkout)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startTrainingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeWorkout)
            </td>
            <td>

             <td>
                 @if (User.IsInRole("admin") || (User.IsInRole("moderator") ||(User.IsInRole("coach")))) // если у пользователя есть роль модератора или администратора,тренера - показать ссылку
                        {
                           <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                           <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                         <a asp-action="RecordToWorkout">Запись на тренировку</a> 
            </td>
               
        </tr>
}
    </tbody>
</table>
